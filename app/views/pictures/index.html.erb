<div class="row">
<h1>Listing pictures</h1>
</div>

<div class="row">
  <div class="large-12">
  <table>
      <tr>
        <th>Title</th>
        <th>Descr</th>
        <th>Image Big</th>
        <th>Image Med</th>
        <th>Image Small</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @pictures.each do |picture| %>
          <tr>
        <td><%= picture.title %></td>
        <td><%= picture.descr %></td>
        <td><%= image_tag picture.image.url %></td>
        <td><%= image_tag picture.image.url(:medium) %></td>
        <td><%= image_tag picture.image.url(:thumb) %></td>
        <td><%= link_to 'Show', picture %></td>
      </tr>
    <% end %>
  </table>
  </div>
</div>

<br />
<%= paginate @pictures%>
<%= link_to 'New Picture', new_picture_path, class: "small round button" %>
